{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<h1 class="col-12 mb-5"><i>CrtaPostsStatsLogin</i></h1>
		<div class="form_wrapper col-4 rounded border py-2 offset-4">
			<form method="post" action="{{ path_for('login') }}" class="needs-validation" novalidate>
				<div class="form-row col-12">
					<div class="form-group col-12 my-5">
						<div class="input-group input-group-sm">
							<div class="input-group-prepend">
					          	<span class="input-group-text">@</span>
					        </div>
							<input type="text" name="username" class="form-control" placeholder="Username" required>
							<div class="invalid-feedback">Select valid username</div>
						</div>
					</div>
					<div class="form-group col-12">
						<input type="password" name="password" class="form-control form-control-sm" placeholder="Password" required>
						<div class="invalid-feedback">Select valid password</div>
					</div>
					{% include 'templates/partials/flash.twig' %}
					<fieldset class="col-12 mt-5">
						<button type="submit" class="btn btn-primary btn-sm mr-3">Submit</button>
						<button type="reset" class="btn btn-secondary btn-sm">Reset</button>
					</fieldset>
				</div>
				{{ csrf.field | raw }}
			</form>
		</div>
	</div>
{% endblock %}